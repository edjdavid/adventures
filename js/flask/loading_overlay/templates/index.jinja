<!DOCTYPE html>
<html>
<head>
  <style>
    html, body {
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
    }

    #form-frame, #load-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      border: 0;
    }

    #load-overlay {
      z-index: 1;
      background-color: rgba(100, 100, 100, 0.5);
      font-size: 100px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    #load-overlay.hide {
      display: none;
    }
  </style>
</head>
<body>
  <div id="load-overlay">
    Loading....
  </div>
  <iframe id="form-frame" src="/form"></iframe>
  <script>
    const loadOverlay = document.querySelector("#load-overlay");
    document.querySelector("#form-frame").addEventListener("load", function(e) {
      loadOverlay.classList.add("hide");
      e.target.contentWindow.addEventListener("beforeunload", function(e) {
        loadOverlay.classList.remove("hide");
      })
    })
  </script>
</body>
</html>